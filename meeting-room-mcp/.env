# === 데이터베이스 설정 (MySQL) ===
DB_MYSQL_HOST=localhost
DB_MYSQL_PORT=33066
DB_MYSQL_USER=root
DB_MYSQL_PASSWORD=1234
DB_MYSQL_DATABASE=mydb
DB_MYSQL_CHARSET=utf8mb4

# 커넥션 풀 설정
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# === API 서버 설정 ===
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=False

# === LLM API 키들 ===
LLM_OPENAI_API_KEY=your-openai-api-key-here
LLM_ANTHROPIC_API_KEY=your-anthropic-api-key-here
LLM_DEFAULT_PROVIDER=openai
LLM_OPENAI_MODEL=gpt-4-turbo-preview
LLM_ANTHROPIC_MODEL=claude-3-sonnet-20240229
LLM_TIMEOUT=30

# === 이메일 설정 ===
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASS=your-app-password
EMAIL_SMTP_TLS=True
EMAIL_MOCK_MODE=True
EMAIL_FROM_EMAIL=meeting-system@company.com
EMAIL_FROM_NAME=회의실 예약 시스템

# === 보안 설정 ===
SECRET_KEY=your-secret-key-change-in-production
ALLOWED_ORIGINS=["*"]

# === 애플리케이션 설정 ===
APP_NAME=Meeting Room MCP
APP_VERSION=1.0.0
ENVIRONMENT=development

# === 로깅 설정 ===
LOG_LEVEL=INFO
LOG_DIR=./logs

# === 세션 관리 ===
SESSION_FILE=./data/sessions.json
SESSION_CLEANUP_HOURS=24

# === MCP 서버 설정 ===
MCP_SERVER_SCRIPT=./scripts/start_server.py